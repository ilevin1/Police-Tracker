{
  "expo": {
    "name": "Police Tracker",
    "slug": "PoliceTracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Real-time police alert tracker to help you stay informed about traffic stops and police activity in your area.",
    "privacy": "public",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.policetracker.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.policetracker.app",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow PoliceTracker to use your location to show nearby police alerts."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "8feb413d-c3f2-47cf-94b3-204c87a2b79b"
      }
    }
  }
}
